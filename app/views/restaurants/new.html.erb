<h2>New Restaurant</h2>

<div class="row">
  <%= render 'partials/errors', object: @restaurant %>
  
  <%= form_for @restaurant, html: { class: 'col s6 offset-s3' } do |f| %>

    <div class="input-field">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="input-field">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'materialize-textarea' %>
    </div>

    <div class="input-field">
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>
    </div>

    <div class="input-field">
      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>

    <div class="input-field">
      <%= f.select :price_range, options_for_select(Restaurant::PRICE_RANGES.invert) %>
      <!-- <%= f.label :price_range %> -->
    </div>

    <div class="input-field">
      <%= f.label :total_seats %>
      <%= f.number_field :total_seats, class: 'form-control' %>
    </div>

    <div class="input-field">
      <%= f.label :open_hour %>
      <%= f.time_select :open_hour, class: 'form-control timepicker' %>
    </div>

    <div class="input-field">
      <%= f.label :close_hour %>
      <%= f.time_select :close_hour, class: 'form-control timepicker' %>
    </div>

    <div class="input-field">
      <%= f.submit 'Save', class: 'btn' %>
    </div>

    <div class="input-field">
      <%= link_to 'Cancel', profile_path, class: 'btn' %>
    </div>
  <% end %>
</div>
