<h2>Current reservations</h2>

<div>
  <% current_user.restaurant.reservations.each do |reservation| %>
  <ul>
    <li>Client: <%=  reservation.user.name %>
      on: <%=  reservation.date %>
      at: <%=  reservation.time.strftime('%I:%M%p') %>
      st: <%=  reservation.status %>
        <% if reservation.status == "pending" %>
          <%= link_to "Confirm", restaurant_reservation_confirm_path(current_user, reservation), method: :patch %>
          <%= link_to "Cancel", restaurant_reservation_cancel_path(current_user, reservation), method: :put %>
        <% elsif reservation.status == "confirmed"  %>
          <span>CONFIRMED</span>
        <% elsif reservation.status == "cancelled"  %>
          <span>CANCELLED</span>
        <% end %>
    </li>
  </ul>
  <% end %>
</div>
