<h2>Sign Up</h2>

<div class="row">
  <%= render 'partials/errors', object: @user %>

  <%= form_for @user, { url: users_path, method: :post, html: { class: 'col s10 offset-s1 m8 offset-m2 l6 offset-l3' } } do |f| %>

    <div class="row">
      <div class="input-field">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <%= f.phone_field :phone, class: 'form-control', placeholder: 'Please enter a real phone number' %>
        <%= f.label :phone %>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <%= f.submit 'Save', class: 'waves-effect waves-light btn' %>
      </div>
    </div>

  <% end %>
</div>
