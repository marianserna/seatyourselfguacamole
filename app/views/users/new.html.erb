<h2>Sign Up</h2>

<div class="row">
  <%= render 'partials/errors', object: @user %>
  
  <%= form_for @user, { url: users_path, method: :post, html: { class: 'col s6 offset-s3' } } do |f| %>

    <div class="row">
      <div class="input-field">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <%= f.label :phone %>
        <%= f.phone_field :phone, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <%= f.submit 'Save', class: 'waves-effect waves-light btn' %>
      </div>
    </div>

  <% end %>
</div>
